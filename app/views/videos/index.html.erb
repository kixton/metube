
<div class="main main-vid">

<% @videos.each do |video| %>

  <div class="vid-thumb-info">
  <% if video.file_name != nil %>

    <video src="video_uploads/<%=video.file_name%>"></video>

    <%= video_tag("/public/video_uploads/" + video.file_name) %>
  <% else %>
    <%= link_to(video_path(video)) do %>
      <%= image_tag("http://img.youtube.com/vi/#{video.url}/hqdefault.jpg") %><br>
    <% end %>
  <% end %>



  <%= link_to(video.title, video_path(video)) %><br>
  by <em><%= link_to(video.author.name, user_path(video.author)) %></em>
  
  </div>

<% end %>

<div class="clearfix"></div>

</div>
