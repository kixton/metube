
<div class="main">

<iframe width="500" height="300" src="http://www.youtube.com/embed/<%= @video.url%>?modestbranding=1&amp;showinfo=0&amp;fs=0&amp;controls=0" class="showvideo"></iframe><br>

<%= @video.title %><br>
Uploaded by <em><%= @video.author.name %></em><br><br>

<select id="add_to_playlist" class="button dropdown tiny" name="playlist_id">
    <option selected disabled>Add to Playlist</option>
  <% @playlists.each do |playlist| %>
    <option value="<%= playlist.id %>"><%= playlist.listname %></option>
  <% end %>
</select>



  <input type="button" value="Edit" class="button tiny" 
  onClick="javascript:location.href = '/videos/<%= @video.id %>/edit'">

  <%= link_to("Delete", video_path(@video), method: :delete, 
  data: {confirm: "Are you sure you want to delete this video?"}, class: "button tiny alert" ) %>

<br>

</div>


