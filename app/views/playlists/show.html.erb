
<div class="main">

<%= link_to(@playlist.listname) %> by <em><%= @playlist.user.name %></em> 

  <input type="button" value="Edit" class="button tiny" 
  onClick="javascript:location.href = '/playlists/<%= @playlist.id %>/edit'">

  <%= link_to("Delete", playlist_path(@playlist), method: :delete, 
  data: {confirm: "Are you sure you want to delete this playlist?"}, class: "button tiny alert" ) %><br>
  
  <% @playlist.videos.each do |video| %>
    <a href="/videos/<%=video.id%>"><%= video.title %></a><br>
  <% end %>


<br>
</div>