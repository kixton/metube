SessionController
def login
  user = User.find_by(params[:email])
  if user.authenticate(params[:password])
    sessions[:user] = user.id
  end

  redirect_to root_path
end

def logout
  user = User.find_by(params[:email])
  sessions[:user] = nil
end



post '/sign_in' => 'sessions#login'


def current_user
  @user ||= User.find(sessions[:user_id])


